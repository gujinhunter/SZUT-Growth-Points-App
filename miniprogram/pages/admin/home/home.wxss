/* pages/admin/home/home.wxss */
.container {
    background: linear-gradient(180deg, #f7f9fc, #ffffff);
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 60rpx 30rpx;
  }
  
  .header {
    display: flex;
    align-items: center;
    margin-bottom: 60rpx;
  }
  
  .logo {
    width: 100rpx;
    height: 100rpx;
    margin-right: 20rpx;
    border-radius: 20rpx;
    box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.1);
  }
  
  .title-area {
    display: flex;
    flex-direction: column;
  }
  
  .title {
    font-size: 36rpx;
    font-weight: bold;
    color: #333;
  }
  
  .subtitle {
    font-size: 26rpx;
    color: #888;
    margin-top: 8rpx;
  }
  
  .panel {
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: 30rpx;
  }
  
  .menu {
    background: #fff;
    border-radius: 20rpx;
    padding: 40rpx 30rpx;
    box-shadow: 0 6rpx 20rpx rgba(0,0,0,0.05);
    display: flex;
    align-items: center;
    transition: all 0.2s ease;
  }
  
  .menu:active {
    transform: scale(0.98);
    background-color: #fef4f5;
  }
  
  .menu-icon {
    width: 80rpx;
    height: 80rpx;
    margin-right: 30rpx;
  }
  
  .menu-title {
    font-size: 30rpx;
    font-weight: 600;
    color: #333;
  }
  
  .menu-desc {
    flex: 1;
    text-align: right;
    font-size: 24rpx;
    color: #888;
  }
  
  .footer {
    margin-top: auto;
    color: #aaa;
    font-size: 22rpx;
    margin-bottom: 20rpx;
  }
  