.admin-home {
    min-height: 100vh;
    padding: 48rpx 32rpx 80rpx;
    box-sizing: border-box;
    background: #f3f5f9;
    display: flex;
    flex-direction: column;
    gap: 32rpx;
  }
  
  .hero-card {
    background: #ffffff;
    border-radius: 28rpx;
    padding: 40rpx 36rpx;
    box-shadow: 0 18rpx 32rpx rgba(31, 79, 163, 0.12);
  }
  
  .hero-top {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  
  .hero-title {
    font-size: 36rpx;
    font-weight: 600;
    color: #1f4e9d;
  }
  
  .hero-sub {
    margin-top: 10rpx;
    font-size: 26rpx;
    color: #5f6b8a;
  }
  
  .date-tag {
    padding: 10rpx 20rpx;
    border-radius: 999rpx;
    background: rgba(31, 79, 163, 0.12);
    color: #1f4e9d;
    font-size: 24rpx;
  }
  
  .metrics-row {
    margin-top: 36rpx;
    display: flex;
    gap: 18rpx;
  }
  
  .metric-card {
    flex: 1;
    border-radius: 24rpx;
    padding: 28rpx;
    color: #fff;
    display: flex;
    flex-direction: column;
    gap: 12rpx;
    box-shadow: 0 16rpx 24rpx rgba(31, 79, 163, 0.18);
  }
  
  .metric-card.primary {
    background: linear-gradient(135deg, #1f4e9d 0%, #2f6fd2 100%);
  }
  
  .metric-card.secondary {
    background: linear-gradient(135deg, #3c5a95 0%, #4a7bc6 100%);
  }
  
  .metric-card.accent {
    background: linear-gradient(135deg, #2c9c5a 0%, #57c88a 100%);
  }
  
  .metric-label {
    font-size: 26rpx;
    opacity: 0.9;
  }
  
  .metric-value {
    font-size: 44rpx;
    font-weight: 600;
  }
  
  .metric-desc {
    font-size: 24rpx;
    opacity: 0.85;
  }
  
  .quick-grid {
    background: #ffffff;
    border-radius: 28rpx;
    padding: 32rpx 30rpx;
    box-shadow: 0 14rpx 28rpx rgba(31, 79, 163, 0.1);
  }
  
  .grid-title {
    font-size: 28rpx;
    font-weight: 600;
    color: #1f4e9d;
    margin-bottom: 24rpx;
  }
  
  .grid-wrap {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 24rpx;
  }
  
  .grid-item {
    position: relative;
    background: #f6f8fc;
    border-radius: 20rpx;
    padding: 26rpx 20rpx;
    text-align: center;
    color: #34486b;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 18rpx;
    box-shadow: 0 10rpx 20rpx rgba(31, 79, 163, 0.08);
  }
  
  .grid-icon {
    width: 64rpx;
    height: 64rpx;
  }
  
  .grid-text {
    font-size: 26rpx;
  }
  
  .badge {
    position: absolute;
    top: 16rpx;
    right: 24rpx;
    min-width: 40rpx;
    padding: 4rpx 12rpx;
    background: #ff5c5c;
    border-radius: 999rpx;
    color: #fff;
    font-size: 20rpx;
  }
  
  .filter-card {
    background: #ffffff;
    border-radius: 28rpx;
    padding: 32rpx 30rpx;
    box-shadow: 0 14rpx 28rpx rgba(31, 79, 163, 0.1);
  }
  
  .card-title {
    font-size: 28rpx;
    font-weight: 600;
    color: #1f4e9d;
    margin-bottom: 20rpx;
  }
  
  .category-row {
    display: flex;
    flex-wrap: wrap;
    gap: 16rpx;
  }
  
  .category-tag {
    padding: 16rpx 28rpx;
    border-radius: 999rpx;
    border: 2rpx solid rgba(31, 79, 163, 0.25);
    color: #1f4e9d;
    font-size: 26rpx;
    background: #f6f8fc;
  }
  
  .category-tag.active {
    background: linear-gradient(135deg, #1f4e9d 0%, #2f6fd2 100%);
    color: #fff;
    border: none;
    box-shadow: 0 12rpx 24rpx rgba(31, 79, 163, 0.18);
  }
  
  .chart-section {
    display: flex;
    flex-direction: column;
    gap: 28rpx;
  }
  
  .chart-card {
    background: #ffffff;
    border-radius: 28rpx;
    padding: 32rpx 30rpx;
    box-shadow: 0 14rpx 28rpx rgba(31, 79, 163, 0.1);
  }
  
  .card-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20rpx;
  }
  
  .card-sub {
    font-size: 24rpx;
    color: #7c89a3;
  }

.announcement-card {
  background: #ffffff;
  border-radius: 28rpx;
  padding: 32rpx 30rpx;
  box-shadow: 0 16rpx 32rpx rgba(31, 79, 163, 0.12);
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.announcement-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.announcement-actions {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.announcement-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1f4e9d;
}

.announcement-sub {
  margin-top: 6rpx;
  font-size: 24rpx;
  color: #7c89a3;
}

.announcement-action {
  display: inline-flex;
  align-items: center;
  gap: 12rpx;
  padding: 10rpx 20rpx;
  border-radius: 999rpx;
  border: 2rpx solid rgba(31, 79, 163, 0.2);
  background: rgba(255, 255, 255, 0.9);
  color: #1f4e9d;
  font-size: 24rpx;
  font-weight: 600;
  box-shadow: 0 6rpx 12rpx rgba(31, 79, 163, 0.08);
}

.announcement-icon {
  font-size: 32rpx;
  line-height: 1;
}

.announcement-action-text {
  font-size: 24rpx;
}

.announcement-delete {
  font-size: 24rpx;
  color: #ff6b6b;
  padding: 8rpx 16rpx;
  border-radius: 999rpx;
  border: 2rpx solid rgba(255, 107, 107, 0.4);
  background: rgba(255, 240, 240, 0.9);
}

.announcement-body {
  background: #f6f8fc;
  border-radius: 22rpx;
  padding: 24rpx 26rpx;
}

.announcement-content {
  font-size: 26rpx;
  color: #39425b;
  line-height: 1.6;
  white-space: pre-line;
}

.announcement-expire {
  margin-top: 12rpx;
  font-size: 24rpx;
  color: #ff6b6b;
  text-align: right;
}

.announcement-empty {
  font-size: 24rpx;
  color: #8a94ac;
}

.sheet-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.35);
  z-index: 90;
}

.sheet-panel {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background: #ffffff;
  border-radius: 40rpx 40rpx 0 0;
  padding: 40rpx 36rpx 80rpx;
  box-shadow: 0 -12rpx 40rpx rgba(0, 0, 0, 0.2);
  z-index: 91;
}

.sheet-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.sheet-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #1f4e9d;
}

.sheet-form {
  max-height: 60vh;
  overflow-y: auto;
}

.dialog-field {
  margin-bottom: 24rpx;
}

.dialog-label {
  font-size: 26rpx;
  color: #6b7faf;
  margin-bottom: 12rpx;
}

.dialog-input,
.dialog-textarea {
  width: 100%;
  border-radius: 24rpx;
  border: 2rpx solid rgba(31, 79, 163, 0.2);
  box-sizing: border-box;
  font-size: 28rpx;
  background: #f8faff;
}

.dialog-input {
  height: 84rpx;
  line-height: 84rpx;
  padding: 0 24rpx;
}

.dialog-textarea {
  min-height: 180rpx;
  padding: 20rpx 24rpx;
}

.dialog-picker {
  display: flex;
  align-items: center;
  height: 84rpx;
}

.sheet-actions {
  display: flex;
  justify-content: flex-end;
  gap: 24rpx;
}

.dialog-cancel,
.dialog-confirm {
  min-width: 160rpx;
  height: 72rpx;
  border-radius: 999rpx;
  font-size: 28rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 32rpx;
}

.dialog-cancel {
  border: 2rpx solid rgba(31, 79, 163, 0.3);
  color: #1f4e9d;
  background: #fff;
}

.dialog-cancel::after {
  border: none;
}

.dialog-confirm {
  border: none;
  background: linear-gradient(135deg, #1f4e9d, #2f6fd2);
  color: #fff;
  box-shadow: 0 12rpx 24rpx rgba(31, 79, 163, 0.2);
}

.dialog-confirm::after {
  border: none;
}