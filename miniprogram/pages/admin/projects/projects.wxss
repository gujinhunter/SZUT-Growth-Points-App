.container {
  min-height: 100vh;
  background: #f3f5f9;
  padding-bottom: 40rpx;
}

.page-header {
  background: #ffffff;
  padding: 32rpx 32rpx 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(31, 79, 163, 0.08);
  margin-bottom: 32rpx;
}

.header-content {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.page-title {
  font-size: 40rpx;
  font-weight: 600;
  color: #1f4e9d;
  letter-spacing: 1rpx;
}

.header-spacer {
  flex: 1;
}

.add-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  height: 72rpx;
  padding: 0 32rpx;
  border-radius: 999rpx;
  background: linear-gradient(135deg, #1f4e9d 0%, #2f6fd2 100%);
  color: #ffffff;
  font-size: 28rpx;
  font-weight: 600;
  box-shadow: 0 8rpx 20rpx rgba(31, 79, 163, 0.25);
  border: none;
  transition: all 0.3s ease;
}

.add-btn::after {
  border: none;
}

.add-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(31, 79, 163, 0.2);
}

.add-icon {
  font-size: 36rpx;
  font-weight: 300;
  line-height: 1;
}

.projects-list {
  padding: 0 32rpx;
}

.category-section {
  margin-bottom: 48rpx;
}

.category-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding: 0 8rpx;
}

.category-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f4e9d;
  position: relative;
  padding-left: 20rpx;
}

.category-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 32rpx;
  background: linear-gradient(135deg, #1f4e9d 0%, #2f6fd2 100%);
  border-radius: 4rpx;
}

.category-count {
  font-size: 24rpx;
  color: #7c89a3;
  background: rgba(31, 79, 163, 0.08);
  padding: 8rpx 20rpx;
  border-radius: 999rpx;
  font-weight: 500;
}

.category-projects {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 20rpx rgba(31, 79, 163, 0.1);
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  transition: all 0.3s ease;
}

.card:active {
  transform: translateY(-2rpx);
  box-shadow: 0 12rpx 28rpx rgba(31, 79, 163, 0.15);
}

.info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.name {
  font-weight: 600;
  font-size: 32rpx;
  color: #2f3f64;
  line-height: 1.4;
}

.meta {
  display: flex;
  gap: 32rpx;
  font-size: 26rpx;
  flex-wrap: wrap;
}

.category, .score {
  color: #7c89a3;
  font-weight: 500;
}

.remark {
  font-size: 26rpx;
  color: #9aa1c7;
  margin-top: 4rpx;
  line-height: 1.6;
  padding: 16rpx;
  background: rgba(31, 79, 163, 0.04);
  border-radius: 12rpx;
  border-left: 4rpx solid rgba(31, 79, 163, 0.2);
}

.actions {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-left: 24rpx;
}

.edit-btn,
.delete-btn {
  min-width: 120rpx;
  height: 64rpx;
  line-height: 64rpx;
  border-radius: 16rpx;
  font-size: 26rpx;
  font-weight: 500;
  border: none;
  padding: 0 24rpx;
}

.edit-btn {
  background: linear-gradient(135deg, #1f4e9d 0%, #2f6fd2 100%);
  color: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(31, 79, 163, 0.2);
}

.edit-btn::after {
  border: none;
}

.delete-btn {
  background: #fff;
  color: #ff6b6b;
  border: 2rpx solid #ff6b6b;
  box-shadow: 0 2rpx 8rpx rgba(255, 107, 107, 0.15);
}

.delete-btn::after {
  border: none;
}

.edit-btn:active {
  transform: scale(0.96);
  box-shadow: 0 2rpx 8rpx rgba(31, 79, 163, 0.15);
}

.delete-btn:active {
  transform: scale(0.96);
  background: rgba(255, 107, 107, 0.05);
}

.empty {
  text-align: center;
  color: #9aa1c7;
  margin-top: 200rpx;
  font-size: 28rpx;
}