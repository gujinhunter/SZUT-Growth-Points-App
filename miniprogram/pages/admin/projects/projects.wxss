.container {
  min-height: 100vh;
  background: #f3f5f9;
  padding-bottom: 40rpx;
}

.page-header {
  background: #ffffff;
  padding: 32rpx 32rpx 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(31, 79, 163, 0.08);
  margin-bottom: 32rpx;
}

.header-content {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.page-title {
  font-size: 40rpx;
  font-weight: 600;
  color: #1f4e9d;
  letter-spacing: 1rpx;
}

.header-spacer {
  flex: 1;
}

.add-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  height: 72rpx;
  padding: 0 32rpx;
  border-radius: 999rpx;
  background: linear-gradient(135deg, #1f4e9d 0%, #2f6fd2 100%);
  color: #ffffff;
  font-size: 28rpx;
  font-weight: 600;
  box-shadow: 0 8rpx 20rpx rgba(31, 79, 163, 0.25);
  border: none;
  transition: all 0.3s ease;
}

.add-btn::after {
  border: none;
}

.add-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(31, 79, 163, 0.2);
}

.ghost-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  height: 72rpx;
  padding: 0 32rpx;
  border-radius: 999rpx;
  border: 2rpx solid rgba(31, 79, 163, 0.3);
  background: rgba(31, 79, 163, 0.05);
  color: #1f4e9d;
  font-size: 28rpx;
  font-weight: 600;
}

.ghost-btn::after {
  border: none;
}

.add-icon {
  font-size: 36rpx;
  font-weight: 300;
  line-height: 1;
}

.projects-list {
  padding: 0 32rpx;
}

.category-section {
  margin-bottom: 48rpx;
}

.category-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding: 0 8rpx;
}

.category-info {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.category-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f4e9d;
  position: relative;
  padding-left: 20rpx;
}

.category-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 32rpx;
  background: linear-gradient(135deg, #1f4e9d 0%, #2f6fd2 100%);
  border-radius: 4rpx;
}

.category-count {
  font-size: 24rpx;
  color: #7c89a3;
  background: rgba(31, 79, 163, 0.08);
  padding: 8rpx 20rpx;
  border-radius: 999rpx;
  font-weight: 500;
}

.category-projects {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 20rpx rgba(31, 79, 163, 0.1);
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  transition: all 0.3s ease;
}

.card:active {
  transform: translateY(-2rpx);
  box-shadow: 0 12rpx 28rpx rgba(31, 79, 163, 0.15);
}

.info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.name {
  font-weight: 600;
  font-size: 32rpx;
  color: #2f3f64;
  line-height: 1.4;
}

.meta {
  display: flex;
  gap: 32rpx;
  font-size: 26rpx;
  flex-wrap: wrap;
}

.category, .score {
  color: #7c89a3;
  font-weight: 500;
}

.remark {
  font-size: 26rpx;
  color: #9aa1c7;
  margin-top: 4rpx;
  line-height: 1.6;
  padding: 16rpx;
  background: rgba(31, 79, 163, 0.04);
  border-radius: 12rpx;
  border-left: 4rpx solid rgba(31, 79, 163, 0.2);
}

.actions {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-left: 24rpx;
}

.edit-btn,
.delete-btn {
  min-width: 120rpx;
  height: 64rpx;
  line-height: 64rpx;
  border-radius: 16rpx;
  font-size: 26rpx;
  font-weight: 500;
  border: none;
  padding: 0 24rpx;
}

.edit-btn {
  background: linear-gradient(135deg, #1f4e9d 0%, #2f6fd2 100%);
  color: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(31, 79, 163, 0.2);
}

.edit-btn::after {
  border: none;
}

.delete-btn {
  background: #fff;
  color: #ff6b6b;
  border: 2rpx solid #ff6b6b;
  box-shadow: 0 2rpx 8rpx rgba(255, 107, 107, 0.15);
}

.delete-btn::after {
  border: none;
}

.edit-btn:active {
  transform: scale(0.96);
  box-shadow: 0 2rpx 8rpx rgba(31, 79, 163, 0.15);
}

.delete-btn:active {
  transform: scale(0.96);
  background: rgba(255, 107, 107, 0.05);
}

.empty {
  text-align: center;
  color: #9aa1c7;
  margin-top: 200rpx;
  font-size: 28rpx;
}

.sheet-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.35);
  z-index: 90;
}

.sheet-panel {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background: #ffffff;
  border-radius: 40rpx 40rpx 0 0;
  padding: 40rpx 36rpx 80rpx;
  box-shadow: 0 -12rpx 40rpx rgba(0, 0, 0, 0.2);
  z-index: 91;
}

.sheet-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.sheet-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #1f4e9d;
}

.sheet-add {
  height: 64rpx;
  padding: 0 32rpx;
  border-radius: 999rpx;
  border: none;
  background: linear-gradient(135deg, #1f4e9d, #2f6fd2);
  color: #fff;
  font-size: 26rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
}

.sheet-add::after {
  border: none;
}

.sheet-list {
  max-height: 55vh;
  overflow-y: auto;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.sheet-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 28rpx;
  background: #f5f7fb;
  border-radius: 24rpx;
}

.sheet-item-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.sheet-item-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #1f2b46;
}

.sheet-item-meta {
  font-size: 24rpx;
  color: #7c8aa6;
  display: flex;
  gap: 24rpx;
}

.sheet-item-btn {
  height: 56rpx;
  line-height: 56rpx;
  padding: 0 24rpx;
  font-size: 24rpx;
  border-radius: 16rpx;
  border: 2rpx solid rgba(31, 79, 163, 0.3);
  color: #1f4e9d;
  background: #fff;
}

.sheet-item-btn::after {
  border: none;
}

.sheet-empty {
  text-align: center;
  color: #9aa1c7;
  padding: 60rpx 0;
}

.sheet-form {
  max-height: 55vh;
  overflow-y: auto;
}

.dialog-field {
  margin-bottom: 24rpx;
}

.dialog-label {
  font-size: 26rpx;
  color: #6b7faf;
  margin-bottom: 12rpx;
}

.dialog-input,
.dialog-textarea {
  width: 100%;
  border-radius: 24rpx;
  border: 2rpx solid rgba(31, 79, 163, 0.2);
  padding: 0 24rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  background: #f8faff;
}

.dialog-input {
  height: 84rpx;
  line-height: 84rpx;
}

.dialog-textarea {
  min-height: 180rpx;
  padding: 20rpx 24rpx;
}

.sheet-actions {
  display: flex;
  justify-content: flex-end;
  gap: 24rpx;
}

.dialog-cancel,
.dialog-confirm {
  min-width: 160rpx;
  height: 72rpx;
  border-radius: 999rpx;
  font-size: 28rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 32rpx;
}

.dialog-cancel {
  border: 2rpx solid rgba(31, 79, 163, 0.3);
  color: #1f4e9d;
  background: #fff;
}

.dialog-cancel::after {
  border: none;
}

.dialog-confirm {
  border: none;
  background: linear-gradient(135deg, #1f4e9d, #2f6fd2);
  color: #fff;
  box-shadow: 0 12rpx 24rpx rgba(31, 79, 163, 0.2);
}

.dialog-confirm::after {
  border: none;
}