.container {
  padding: 24rpx;
  background: #f7f8fa;
  min-height: 100vh;
  box-sizing: border-box;
}

.filter-bar {
  display: flex;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.filter-item {
  flex: 1;
}

.filter-label {
  font-size: 24rpx;
  color: #6b7280;
  margin-bottom: 6rpx;
  display: block;
}

.picker-cell {
  padding: 18rpx 20rpx;
  background: #fff;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #1f2c4d;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.record-card {
  display: flex;
  gap: 16rpx;
  padding: 20rpx;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 6rpx 14rpx rgba(0,0,0,0.05);
  margin-bottom: 16rpx;
}

.cover {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  background: #eef2f7;
}

.cover.placeholder {
  display: flex;
  align-items: center;
  justify-content: center;
  color: #9ca3af;
  font-size: 24rpx;
}

.info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12rpx;
}

.name {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2c4d;
}

.status {
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 24rpx;
  background: #eef2f7;
}

.status.ok { color: #1fa67a; }
.status.pending { color: #e6a700; }
.status.off { color: #d9534f; }

.meta {
  font-size: 26rpx;
  color: #4b5c7a;
}

.need {
  color: #e65a00;
  font-weight: 600;
}

.user {
  color: #1f2c4d;
}

.openid {
  color: #6b7280;
}

.time {
  font-size: 24rpx;
  color: #8a94a7;
}

.actions {
  margin-top: 6rpx;
}

.footer {
  text-align: center;
  color: #9ca3af;
  font-size: 26rpx;
  padding: 16rpx 0 24rpx;
}

.empty {
  margin-top: 200rpx;
  text-align: center;
  color: #9ca3af;
  font-size: 28rpx;
}

