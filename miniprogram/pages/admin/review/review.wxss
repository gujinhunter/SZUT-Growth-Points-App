.admin-page {
  min-height: 100vh;
  padding: 48rpx 32rpx 72rpx;
  box-sizing: border-box;
  background-color: #f3f5f9;
}

.page-header {
  padding: 40rpx 36rpx;
  border-radius: 24rpx;
  background: #ffffff;
  box-shadow: 0 12rpx 28rpx rgba(31, 79, 163, 0.08);
}

.header-badge {
  display: inline-block;
  padding: 10rpx 20rpx;
  border-radius: 999rpx;
  background: rgba(31, 79, 163, 0.12);
  color: #1f4e9d;
  font-size: 24rpx;
  margin-bottom: 18rpx;
}

.header-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1f4e9d;
  margin-bottom: 12rpx;
}

.header-desc {
  font-size: 26rpx;
  color: #5f6b8a;
  line-height: 1.5;
}

.filter-card {
  margin-top: 28rpx;
  padding: 32rpx 30rpx;
  border-radius: 24rpx;
  background: #ffffff;
  box-shadow: 0 10rpx 24rpx rgba(31, 79, 163, 0.06);
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.search-row {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.search-input {
  flex: 1;
  height: 72rpx;
  border-radius: 999rpx;
  border: 2rpx solid rgba(31, 79, 163, 0.18);
  padding: 0 24rpx;
  font-size: 26rpx;
  background: #ffffff;
  box-sizing: border-box;
  min-width: 0; /* 允许 flex 项目缩小 */
}

.search-btn {
  width: 240rpx !important; /* 固定宽度，不再使用 min-width */
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: normal;
  padding: 0;
  border-radius: 999rpx;
  border: none;
  font-size: 26rpx;
  font-weight: 600;
  /* 确保文字清晰可见，即使有 plain 属性也覆盖 */
  background: linear-gradient(135deg, #1f4e9d 0%, #2f6fd2 100%) !important;
  color: #fff !important;
  box-shadow: 0 6rpx 16rpx rgba(31, 79, 163, 0.25);
  flex-shrink: 0; /* 防止被压缩 */
}

.search-btn::after {
  border: none !important;
}

.search-btn:active {
  opacity: 0.85;
  transform: scale(0.98);
}

.filter-row {
  display: flex;
  gap: 18rpx;
}

.picker-display {
  flex: 1;
  height: 70rpx;
  display: flex;
  align-items: center;
  padding: 0 28rpx;
  border-radius: 18rpx;
  background: rgba(31, 79, 163, 0.08);
  color: #1f4e9d;
  font-size: 26rpx;
  line-height: normal;
}


.content-section {
  margin-top: 36rpx;
}

.loading,
.empty {
  text-align: center;
  padding: 80rpx 0;
  color: #8793b0;
  font-size: 28rpx;
}

.review-card {
  display: flex;
  justify-content: space-between;
  gap: 24rpx;
  padding: 32rpx 28rpx;
  border-radius: 24rpx;
  background: #ffffff;
  border: 2rpx solid rgba(31, 79, 163, 0.08);
  box-shadow: 0 12rpx 20rpx rgba(31, 79, 163, 0.08);
}

.review-card + .review-card {
  margin-top: 24rpx;
}

.card-info {
  flex: 1;
}

.project {
  font-size: 30rpx;
  font-weight: 600;
  color: #2a3d6c;
}

.meta {
  margin-top: 12rpx;
  font-size: 26rpx;
  color: #5f6b8a;
  line-height: 1.6;
}

.meta.reason {
  color: #4b5f88;
}

.card-side {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 16rpx;
  min-width: 180rpx;
}

.status-tag {
  padding: 8rpx 20rpx;
  border-radius: 999rpx;
  font-size: 26rpx;
  font-weight: 600;
  background: rgba(31, 79, 163, 0.1);
  color: #1f4e9d;
}

.status-tag.pending {
  background: rgba(255, 180, 0, 0.16);
  color: #d98500;
}

.status-tag.approved {
  background: rgba(49, 182, 106, 0.16);
  color: #2c9c5a;
}

.status-tag.rejected {
  background: rgba(255, 77, 79, 0.16);
  color: #d94a4c;
}

.action-btn {
  min-width: 160rpx;
  height: 68rpx;
  line-height: 68rpx;
  border-radius: 999rpx;
  font-size: 24rpx;
  font-weight: 500;
  padding: 0 30rpx;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  border: none;
  color: #fff;
}

.action-btn::after {
  border: none;
}

.action-btn.outline {
  background: transparent;
  color: #1f4e9d;
  border: 2rpx solid rgba(31, 79, 163, 0.35);
}

.action-btn.primary {
  background: linear-gradient(135deg, #1f4e9d 0%, #2f6fd2 100%);
  box-shadow: 0 10rpx 20rpx rgba(31, 79, 163, 0.25);
}

.action-btn.danger {
  background: linear-gradient(135deg, #d94a4c 0%, #ff8f75 100%);
}

.action-btn:active {
  opacity: 0.88;
}

.reject-mask {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background: rgba(15, 28, 55, 0.55);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
}

.reject-panel {
  width: 620rpx;
  max-width: 90%;
  background: #ffffff;
  border-radius: 28rpx;
  padding: 48rpx 40rpx 36rpx;
  box-shadow: 0 24rpx 48rpx rgba(26, 52, 100, 0.25);
  display: flex;
  flex-direction: column;
  gap: 28rpx;
}

.reject-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2f55;
  text-align: center;
}

.reject-textarea {
  min-height: 180rpx;
  border-radius: 20rpx;
  border: 2rpx solid rgba(31, 79, 163, 0.18);
  padding: 24rpx 28rpx;
  font-size: 28rpx;
  color: #33496a;
  background: #f7f9ff;
  box-sizing: border-box;
}

.reject-textarea::placeholder {
  color: #94a0bb;
}

.reject-tip {
  font-size: 24rpx;
  color: #8b98b4;
}

.reject-actions {
  display: flex;
  justify-content: space-between;
  gap: 24rpx;
}

.reject-btn {
  flex: 1;
  height: 72rpx;
  border-radius: 999rpx;
  font-size: 28rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.reject-btn::after {
  border: none;
}

.reject-btn.ghost {
  background: rgba(31, 79, 163, 0.08);
  color: #1f4e9d;
}

.reject-btn.primary {
  background: linear-gradient(135deg, #1f4e9d 0%, #2f6fd2 100%);
  color: #ffffff;
  box-shadow: 0 12rpx 26rpx rgba(31, 79, 163, 0.25);
}

.reject-btn:active {
  opacity: 0.9;
}