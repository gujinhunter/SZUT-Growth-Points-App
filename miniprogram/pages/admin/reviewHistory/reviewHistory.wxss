/* miniprogram/pages/admin/reviewHistory/reviewHistory.wxss */
.page {
  min-height: 100vh;
  padding: 32rpx;
  background: #f3f6fb;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.header-card {
  background: #ffffff;
  border-radius: 28rpx;
  box-shadow: 0 12rpx 34rpx rgba(32, 63, 104, 0.12);
  padding: 32rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.title-area .title {
  font-size: 38rpx;
  font-weight: 700;
  color: #22416e;
}

.title-area .subtitle {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #6d809d;
}

.search-area {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.search-box {
  flex: 1;
  background: #f2f5fb;
  border-radius: 999rpx;
  padding: 0 34rpx 0 30rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
  height: 72rpx;
  border: 2rpx solid rgba(50, 92, 149, 0.12);
}

.search-box input {
  flex: 1;
  font-size: 26rpx;
  color: #33496a;
}

.clear-btn {
  width: 38rpx;
  height: 38rpx;
  border-radius: 50%;
  background: rgba(110, 136, 180, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  color: #53658c;
  font-size: 20rpx;
}

.search-btn {
  padding: 0 22rpx;
  min-width: 120rpx;
  height: 64rpx;
  border-radius: 999rpx;
  background: linear-gradient(135deg, #2360c4 0%, #3b7df0 100%);
  color: #fff;
  font-size: 24rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.filter-area {
  display: flex;
  gap: 16rpx;
  flex-wrap: wrap;
}

.chip {
  flex: none;
  min-width: 150rpx;
  padding: 0 22rpx;
  height: 60rpx;
  border-radius: 999rpx;
  background: rgba(47, 111, 210, 0.08);
  border: 2rpx solid rgba(47, 111, 210, 0.12);
  color: #2f4f85;
  font-size: 24rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.chip view {
  width: 100%;
  text-align: center;
}

.chip.active {
  background: linear-gradient(135deg, #2360c4 0%, #3b7df0 100%);
  border-color: rgba(35, 96, 196, 0.6);
  color: #ffffff;
  box-shadow: 0 10rpx 18rpx rgba(41, 94, 184, 0.2);
}

.content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.loading,
.empty {
  padding: 160rpx 32rpx;
  text-align: center;
  color: #6e7f9a;
  font-size: 26rpx;
}

.list {
  flex: 1;
  height: 100%;
  box-sizing: border-box;
  padding-bottom: 24rpx;
}

.log-card {
  position: relative;
  background: #fff;
  border-radius: 24rpx;
  padding: 28rpx;
  box-shadow: 0 10rpx 28rpx rgba(22, 46, 82, 0.08);
  display: flex;
  flex-direction: column;
  gap: 18rpx;
}

.log-card + .log-card {
  margin-top: 20rpx;
}

.log-badge {
  position: absolute;
  top: 24rpx;
  right: 24rpx;
  padding: 8rpx 24rpx;
  border-radius: 999rpx;
  font-size: 22rpx;
  font-weight: 600;
  color: #fff;
}
.log-badge.approved { background: linear-gradient(135deg, #1f7d54, #48bd88); }
.log-badge.rejected { background: linear-gradient(135deg, #d94141, #f87373); }
.log-badge.pending  { background: linear-gradient(135deg, #8891a6, #c0c5d6); }

.log-title {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
  padding-right: 120rpx;
}
.log-title .project {
  font-size: 30rpx;
  font-weight: 700;
  color: #1f3f6a;
}
.log-title .timestamp {
  font-size: 24rpx;
  color: #73849f;
}

.log-meta {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.meta-item {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 20rpx;
  font-size: 26rpx;
  color: #314763;
}
.meta-label {
  color: #7786a1;
  min-width: 120rpx;
}
.meta-value {
  flex: 1;
  text-align: right;
  word-break: break-all;
}
.meta-value.remark {
  text-align: left;
  color: #2f4161;
}