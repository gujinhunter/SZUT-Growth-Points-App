.container { padding: 24rpx; min-height: 100vh; box-sizing: border-box; background: #f7f8fa; }
.toolbar { display: flex; align-items: center; gap: 12rpx; margin-bottom: 12rpx; }
.hint { color: #8a94a7; font-size: 24rpx; }
.add-btn {
  display: inline-flex;
  align-items: center;
  gap: 10rpx;
  padding: 14rpx 28rpx;
  background: linear-gradient(135deg, #34589e, #103c9f);
  color: #fff;
  border-radius: 999rpx;
  box-shadow: 0 8rpx 16rpx rgba(16, 60, 159, 0.18);
}
.add-icon { font-size: 32rpx; font-weight: 600; }
.add-text { font-size: 28rpx; font-weight: 600; }
.tip-card { background: #e8f1ff; color: #4b5c7a; font-size: 24rpx; padding: 14rpx 16rpx; border-radius: 12rpx; margin-bottom: 16rpx; }
.reward-card { display: flex; gap: 16rpx; padding: 20rpx; background: #fff; border-radius: 16rpx; box-shadow: 0 6rpx 14rpx rgba(0,0,0,0.05); margin-bottom: 16rpx; }
.cover { width: 140rpx; height: 140rpx; border-radius: 12rpx; background: #eef2f7; }
.cover.placeholder { display: flex; align-items: center; justify-content: center; color: #9ca3af; font-size: 26rpx; }
.info { flex: 1; display: flex; flex-direction: column; gap: 10rpx; }
.row { display: flex; align-items: center; justify-content: space-between; gap: 12rpx; }
.name { font-size: 32rpx; font-weight: 600; color: #1f2c4d; }
.meta { display: flex; gap: 12rpx; flex-wrap: wrap; font-size: 26rpx; color: #4b5c7a; }
.need { color: #e65a00; font-weight: 600; }
.stock { color: #2f5fb8; }
.status { padding: 6rpx 16rpx; border-radius: 20rpx; background: #eef2f7; font-size: 24rpx; }
.status.ok { color: #1fa67a; }
.status.off { color: #d9534f; }
.desc { font-size: 26rpx; color: #6b7280; line-height: 1.5; }
.empty { margin-top: 120rpx; text-align: center; color: #9ca3af; font-size: 28rpx; }

.sheet-mask { position: fixed; inset: 0; background: rgba(0,0,0,0.35); z-index: 9; }
.sheet { position: fixed; left: 0; right: 0; bottom: 0; max-height: 78vh; background: #fff; border-top-left-radius: 24rpx; border-top-right-radius: 24rpx; z-index: 10; display: flex; flex-direction: column; }
.sheet-header { padding: 24rpx 28rpx 8rpx; }
.sheet-title { font-size: 32rpx; font-weight: 600; }
.sheet-body { flex: 1; overflow-y: auto; padding: 0 28rpx 12rpx; }
.field { margin-top: 18rpx; display: flex; flex-direction: column; gap: 8rpx; }
.label { font-size: 26rpx; color: #4b5563; }
.input, .picker { padding: 18rpx 20rpx; background: #f5f6f9; border-radius: 12rpx; font-size: 28rpx; }
.textarea { min-height: 140rpx; padding: 18rpx 20rpx; background: #f5f6f9; border-radius: 12rpx; font-size: 28rpx; }
.sheet-actions { padding: 16rpx 28rpx 24rpx; display: flex; gap: 16rpx; }
.btn-cancel { flex: 1; background: #f2f3f5; color: #4b5563; }
.btn-save { flex: 1; }

.cover-row { display: flex; align-items: center; gap: 12rpx; }
.cover-row .input.flex { flex: 1; }
.btn-upload { padding: 0 20rpx; }

/* 主题色按钮统一 */
button[type="primary"] {
  background: linear-gradient(135deg, #34589e, #103c9f);
  border: none;
}

button[type="primary"][disabled] {
  background: #b8c4df;
  color: #fff;
}

.picker-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 18rpx 20rpx;
  background: #f5f6f9;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #1f2c4d;
}
.picker-arrow {
  font-size: 24rpx;
  color: #8a94a7;
}

