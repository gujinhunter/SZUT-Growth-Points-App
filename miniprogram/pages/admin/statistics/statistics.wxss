/* miniprogram/pages/admin/statistics/statistics.wxss */
.page {
  min-height: 100vh;
  padding: 40rpx 32rpx 80rpx;
  background: #f3f6fb;
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.page-header {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 18rpx 36rpx rgba(29, 58, 97, 0.08);
}

.header-top {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 24rpx;
}

.title-block {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.timestamp {
  font-size: 24rpx;
  color: #557094;
}

.button-group {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.primary-btn {
  min-width: 200rpx;
  height: 72rpx;
  border-radius: 999rpx;
  background: linear-gradient(135deg, #2c4f86 0%, #345f9e 100%);
  color: #fff;
  font-size: 26rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.ghost-btn {
  min-width: 140rpx;
  height: 60rpx;
  border-radius: 999rpx;
  border: 2rpx solid rgba(44, 79, 134, 0.28);
  background: rgba(44, 79, 134, 0.08);
  color: #2c4f86;
  font-size: 24rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
}

.title {
  font-size: 36rpx;
  font-weight: 700;
  color: #113a6b;
}

.refresh-info {
  display: flex;
  align-items: center;
  gap: 16rpx;
  font-size: 24rpx;
  color: #557094;
}

.refresh-btn {
  min-width: 140rpx;
  height: 60rpx;
  border-radius: 999rpx;
  background: linear-gradient(135deg, #2c4f86 0%, #345f9e 100%);
  color: #fff;
  border: none;
}

.export-btn {
  /* 导出按钮，保持较大尺寸和圆角，强调主操作 */
  height: 78rpx;
  border-radius: 999rpx;
  background: linear-gradient(135deg, #2c4f86 0%, #345f9e 100%);
  color: #fff;
  /* 字体偏大，提升按钮可视权重 */
  font-size: 28rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  /* 纯背景渐变即可，无需边框 */
  border: none;
}

.table-wrapper {
  background: #ffffff;
  border-radius: 24rpx;
  box-shadow: 0 12rpx 36rpx rgba(17, 43, 78, 0.08);
  overflow: hidden;
}

.table-header,
.table-row {
  display: flex;
  flex-direction: row;
  align-items: stretch;
  min-height: 92rpx;
}

.table-header {
  background: #eff4fb;
  font-size: 26rpx;
  font-weight: 600;
  color: #2b4673;
}

.table-row {
  font-size: 26rpx;
  color: #203d66;
}

.table-row.odd {
  background: #f8fafd;
}

.table-body {
  max-height: calc(100vh - 420rpx);
}

.cell {
  padding: 0 24rpx;
  display: flex;
  align-items: center;
}

.cell.rank {
  width: 120rpx;
  justify-content: center;
  font-weight: 600;
}

.cell.name {
  width: 200rpx;
}

.cell.id {
  width: 200rpx;
}


.cell.academy {
  flex: 1;
  gap: 4rpx;
  color: #4c6284;
}

.cell.points {
  width: 160rpx;
  justify-content: flex-end;
  font-weight: 700;
  color: #1f4b88;
}

.empty {
  flex: 1;
  border-radius: 24rpx;
  background: #fff;
  box-shadow: 0 12rpx 36rpx rgba(17, 43, 78, 0.06);
  padding: 120rpx 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 32rpx;
  color: #6c7c94;
  font-size: 26rpx;
}