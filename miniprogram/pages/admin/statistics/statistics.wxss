/* pages/admin/statistics/statistics.wxss */
.container {
    padding: 20rpx;
    background: #f9f9fb;
    min-height: 100vh;
  }
  
  .title {
    font-size: 36rpx;
    font-weight: bold;
    color: #333;
    margin-bottom: 30rpx;
  }
  
  .summary {
    display: flex;
    justify-content: space-around;
    background: #fff;
    border-radius: 16rpx;
    padding: 30rpx 0;
    box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.05);
    margin-bottom: 40rpx;
  }
  
  .summary-item {
    text-align: center;
  }
  
  .label {
    display: block;
    color: #888;
    font-size: 24rpx;
  }
  
  .value {
    font-size: 40rpx;
    font-weight: bold;
    color: #333;
  }
  
  .value.pass {
    color: #4CAF50;
  }
  
  .value.reject {
    color: #f44336;
  }
  
  .chart-title {
    font-weight: bold;
    font-size: 28rpx;
    margin: 30rpx 0 10rpx 20rpx;
  }
  