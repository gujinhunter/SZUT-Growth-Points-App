.user-page {
  min-height: 100vh;
  padding: 32rpx;
  background: #f3f5f9;
  box-sizing: border-box;
}

.search-card,
.hint-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 28rpx;
  box-shadow: 0 12rpx 24rpx rgba(31, 79, 163, 0.08);
  margin-bottom: 24rpx;
}

.search-row {
  display: flex;
  gap: 16rpx;
  align-items: center;
}

.search-input {
  flex: 1;
  height: 72rpx;
  padding: 0 24rpx;
  border-radius: 18rpx;
  background: #f6f8fc;
  font-size: 28rpx;
}

.search-btn {
  width: 150rpx;
}

.filter-row {
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 20rpx;
}

.picker-display {
  padding: 16rpx 24rpx;
  border-radius: 18rpx;
  background: #f6f8fc;
  font-size: 26rpx;
  color: #1f4e9d;
}

.filter-actions {
  display: flex;
  gap: 16rpx;
}

.plain-btn {
  background: #eef2fb;
  color: #1f4e9d;
}

.hint-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1f4e9d;
  margin-bottom: 12rpx;
}

.hint-text {
  font-size: 26rpx;
  color: #5c6684;
  line-height: 1.5;
}

.user-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.user-card {
  background: #fff;
  border-radius: 28rpx;
  padding: 28rpx;
  box-shadow: 0 16rpx 28rpx rgba(31, 79, 163, 0.08);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.user-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2b50;
}

.user-id {
  margin-top: 8rpx;
  font-size: 26rpx;
  color: #6c7795;
}

.role-tag {
  padding: 10rpx 24rpx;
  border-radius: 999rpx;
  font-size: 24rpx;
  color: #fff;
}

.role-admin {
  background: linear-gradient(135deg, #f76b1c 0%, #fb9832 100%);
}

.role-student {
  background: linear-gradient(135deg, #1f4e9d 0%, #2f6fd2 100%);
}

.info-line {
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  color: #4a5878;
  margin: 10rpx 0;
}

.info-label {
  color: #8a94af;
}

.info-value {
  text-align: right;
  max-width: 60%;
  word-break: break-all;
}

.card-actions {
  margin-top: 20rpx;
  display: flex;
  gap: 16rpx;
  justify-content: flex-end;
}

.action-btn {
  background: #eef2fb;
  color: #1f4e9d;
}

.action-btn.warn {
  background: #fff2f2;
  color: #c0392b;
}

.empty,
.load-more {
  text-align: center;
  color: #7d869f;
  font-size: 26rpx;
  padding: 32rpx 0;
}

