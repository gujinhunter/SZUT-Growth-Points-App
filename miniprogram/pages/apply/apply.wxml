<view class="container">
  <view class="title">申请项目：{{projectName}}</view>

  <form bindsubmit="submitForm">
    <view class="form-item">
      <text>姓名：</text>
      <input name="name" placeholder="请输入姓名" />
    </view>

    <view class="form-item">
      <text>联系方式：</text>
      <input name="phone" placeholder="请输入手机号" />
    </view>

    <view class="form-item">
      <text>申请理由：</text>
      <textarea name="reason" placeholder="请输入申请理由"></textarea>
    </view>

    <view class="form-item upload">
      <text>上传附件：</text>
      <button type="primary" bindtap="chooseFile">选择文件</button>
      <text wx:if="{{fileName}}">{{fileName}}</text>
    </view>

    <button formType="submit" type="primary" class="submit-btn">提交申请</button>
  </form>
</view>
