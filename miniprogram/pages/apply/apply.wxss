
.apply-page {
  min-height: 100vh;
  padding: 48rpx 32rpx 80rpx;
  box-sizing: border-box;
  background-color: #f3f5f9;
}

.hero-card {
  padding: 48rpx 40rpx;
  border-radius: 28rpx;
  color: #fff;
  background: linear-gradient(135deg, #1f4e9d 0%, #2f6fd2 100%);
  box-shadow: 0 24rpx 48rpx rgba(31, 79, 163, 0.25);
}

.hero-badge {
  display: inline-block;
  padding: 10rpx 24rpx;
  border-radius: 999rpx;
  background: rgba(255, 255, 255, 0.25);
  font-size: 24rpx;
  margin-bottom: 24rpx;
}

.hero-title {
  font-size: 42rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.hero-desc {
  font-size: 26rpx;
  line-height: 1.6;
  opacity: 0.9;
}

.form-card {
  margin-top: -60rpx;
  padding: 48rpx 40rpx;
  border-radius: 36rpx;
  background: #fff;
  box-shadow: 0 16rpx 40rpx rgba(71, 89, 255, 0.08);
}

.section {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 36rpx 32rpx;
  box-shadow: 0 10rpx 24rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 28rpx;
}

.section:last-child {
  margin-bottom: 0;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1f4e9d;
  margin-bottom: 28rpx;
  position: relative;
  padding-left: 20rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 32rpx;
  border-radius: 999rpx;
  background: linear-gradient(180deg, #1f4e9d 0%, #2f6fd2 100%);
}

.field {
  margin-bottom: 32rpx;
}

.field:last-child {
  margin-bottom: 0;
}

.field-label {
  font-size: 28rpx;
  color: #2f3f64;
  font-weight: 500;
  margin-bottom: 16rpx;
}

.field-hint,
.word-limit {
  font-size: 22rpx;
  color: #7d88a4;
  margin-top: 12rpx;
}

input,
textarea {
  width: 100%;
  background-color: rgba(255, 255, 255, 0.96);
  border-radius: 20rpx;
  padding: 26rpx 28rpx;
  border: 2rpx solid rgba(31, 79, 163, 0.18);
  box-sizing: border-box;
  font-size: 28rpx;
  line-height: 1.6;
  transition: all 0.25s ease;
  box-shadow: inset 0 0 0 rgba(0, 0, 0, 0);
}

input {
  height: 92rpx;
  line-height: 92rpx;
  padding: 0 28rpx;
}

.picker-display {
  width: 100%;
  height: 92rpx;
  line-height: 92rpx;
  background-color: rgba(255, 255, 255, 0.96);
  border-radius: 20rpx;
  padding: 0 28rpx;
  border: 2rpx solid rgba(31, 79, 163, 0.18);
  box-sizing: border-box;
  font-size: 28rpx;
  color: #2f3f64;
}

input:focus,
textarea:focus {
  border-color: #2f6fd2;
  background-color: #fff;
  box-shadow: 0 12rpx 30rpx rgba(47, 111, 210, 0.18);
}

textarea {
  min-height: 200rpx;
  padding: 26rpx 28rpx;
}

.placeholder {
  color: #9aa1c7;
  font-size: 28rpx;
}

.upload-panel {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 28rpx 32rpx;
  border-radius: 24rpx;
  background: rgba(31, 79, 163, 0.08);
  border: 2rpx dashed rgba(31, 79, 163, 0.45);
}

.upload-desc {
  font-size: 24rpx;
  color: #5f6b8a;
  line-height: 1.6;
}

.upload-files {
  margin-top: 12rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.upload-file {
  font-size: 24rpx;
  color: #2f3f64;
  font-weight: 500;
  word-break: break-all;
}

.upload-btn {
  padding: 0 32rpx;
  height: 72rpx;
  line-height: 72rpx;
  border-radius: 999rpx;
  border: 2rpx solid rgba(31, 79, 163, 0.55);
  background: rgba(255, 255, 255, 0.6);
  color: #1f4e9d;
  font-size: 26rpx;
}

.upload-btn::after {
  border: none;
}

.submit-btn {
  margin-top: 40rpx;
  height: 96rpx;
  border-radius: 999rpx;
  background: linear-gradient(135deg, #1f4e9d 0%, #2f6fd2 100%);
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  box-shadow: 0 16rpx 32rpx rgba(31, 79, 163, 0.35);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  line-height: 1;
}

.submit-btn::after {
  border: none;
}