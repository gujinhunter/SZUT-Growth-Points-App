.container {
    background-color: #f9f9fb;
    min-height: 100vh;
    padding-bottom: 40rpx;
  }
  
  /* 顶部积分卡片 */
  .points-summary {
    position: relative;
    height: 300rpx;
    margin-bottom: 40rpx;
  }
  
  .summary-bg {
    position: absolute;
    width: 100%;
    height: 100%;
    background: linear-gradient(to right, #ff758c, #ff6b81);
    border-bottom-left-radius: 60rpx;
    border-bottom-right-radius: 60rpx;
    box-shadow: 0 6rpx 12rpx rgba(255, 107, 129, 0.3);
  }
  
  .summary-content {
    position: absolute;
    top: 80rpx;
    left: 0;
    right: 0;
    text-align: center;
    color: #fff;
  }
  
  .summary-content .title {
    font-size: 34rpx;
    opacity: 0.9;
  }
  
  .summary-content .score {
    display: block;
    font-size: 100rpx;
    font-weight: bold;
    line-height: 1.2;
    margin: 20rpx 0;
  }
  
  .summary-content .unit {
    font-size: 26rpx;
    opacity: 0.8;
  }
  
  /* 标题 */
  .section-title {
    font-size: 32rpx;
    font-weight: bold;
    margin: 20rpx 40rpx;
    color: #333;
    border-left: 8rpx solid #ff6b81;
    padding-left: 16rpx;
  }
  
  /* 积分明细卡片 */
  .record-card {
    background-color: #fff;
    margin: 20rpx 40rpx;
    border-radius: 20rpx;
    padding: 24rpx 30rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.05);
    transition: transform 0.2s;
  }
  
  .record-card:active {
    transform: scale(0.98);
  }
  
  .record-left {
    display: flex;
    flex-direction: column;
  }
  
  .record-name {
    font-size: 30rpx;
    color: #333;
    font-weight: 500;
  }
  
  .record-date {
    font-size: 24rpx;
    color: #888;
    margin-top: 6rpx;
  }
  
  .record-right .record-score {
    font-size: 36rpx;
    font-weight: bold;
  }
  
  .record-score.plus {
    color: #4CAF50;
  }
  
  .record-score.minus {
    color: #f44336;
  }
  
  /* 空状态 */
  .empty {
    text-align: center;
    color: #aaa;
    margin-top: 200rpx;
    font-size: 28rpx;
  }
  