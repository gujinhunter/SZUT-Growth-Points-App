/* pages/projectList/projectList.wxss */
/* 页面容器 */
.container {
    padding: 20rpx;
    background-color: #f9f9fb;
    min-height: 100vh;
  }
  
  /* 分类标题 */
  .category {
    display: flex;
    justify-content: space-between;
    align-items: center;
    background: #34589e;
    color: white;
    padding: 25rpx;
    margin-top: 20rpx;
    border-radius: 12rpx;
    font-size: 30rpx;
    font-weight: 600;
  }
  .arrow {
    font-size: 28rpx;
    opacity: 0.8;
  }
  
  /* 活动卡片 */
  .activity-list {
    margin-top: 10rpx;
  }
  .activity-card {
    background: white;
    border-radius: 16rpx;
    padding: 25rpx 30rpx;
    margin: 15rpx 0;
    box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.1);
  }
  .activity-name {
    font-size: 30rpx;
    color: #333;
    font-weight: 500;
    margin-bottom: 10rpx;
  }
  .activity-score {
    font-size: 26rpx;
    color: #666;
  }
  .score {
    color: #1aad19;
    font-weight: 600;
  }
  .activity-remark {
    font-size: 24rpx;
    color: #999;
    margin-top: 8rpx;
  }
  .loading {
    text-align: center;
    margin-top: 200rpx;
    color: #666;
    font-size: 28rpx;
  }
  