/* pages/myApplications/myApplications.wxss */
.container {
    padding: 30rpx;
    background-color: #f9f9fb;
    min-height: 100vh;
  }
  
  .title {
    font-size: 36rpx;
    font-weight: bold;
    margin-bottom: 20rpx;
    color: #333;
  }
  
  .card {
    background: #fff;
    border-radius: 16rpx;
    box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.05);
    padding: 20rpx;
    margin-bottom: 24rpx;
  }
  
  .row {
    margin-bottom: 10rpx;
  }
  
  .label {
    color: #888;
    width: 180rpx;
    display: inline-block;
  }
  
  .status {
    font-weight: bold;
  }
  
  .status.pending {
    color: #ff9800;
  }
  
  .status.approved {
    color: #4CAF50;
  }
  
  .status.rejected {
    color: #f44336;
  }

     .reject-text {
     color: #f44336;
   }
  
  .file-link {
    color: #007aff;
    text-decoration: underline;
  display: inline-block;
  margin-right: 16rpx;
  }
  
.attachments .files {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

  .empty {
    text-align: center;
    color: #888;
    margin-top: 200rpx;
    font-size: 28rpx;
  }

.action-row {
  display: flex;
  justify-content: flex-end;
  margin-top: 16rpx;
}

.resubmit-btn {
  display: inline-flex;
  align-items: center;
  gap: 14rpx;
  padding: 0 34rpx;
  height: 64rpx;
  border-radius: 999rpx;
  border: 2rpx solid rgba(31, 79, 163, 0.25);
  background: rgba(31, 79, 163, 0.08);
  color: #1f4e9d;
  font-size: 26rpx;
  font-weight: 500;
}
.resubmit-btn::after {
  border: none;
}

.history-row {
  flex-direction: column;
  align-items: flex-start;
  margin-top: 8rpx;
}
.history-list {
  width: 100%;
  margin-top: 8rpx;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}
.history-item {
  font-size: 24rpx;
  color: #5a647d;
  line-height: 1.4;
  display: flex;
  align-items: center;
}
.history-time {
  margin-right: 12rpx;
  color: #8a92ad;
  min-width: 220rpx;
}
.history-dot {
  margin-right: 12rpx;
  color: #c1c7dd;
}
.history-remark {
  color: #5a647d;
  flex: 1;
}
  
