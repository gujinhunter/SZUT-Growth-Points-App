/* pages/myPoints/myPoints.wxss */

.container {
    background-color: #f9f9fb; /* 设置页面背景色为浅灰色，略微脱离纯白，增加层次感。 */
    min-height: 100vh;         /* 确保容器最小高度占满整个视口（vh = viewport height）。 */
    padding-bottom: 40rpx;     /* 底部留出间距，避免内容紧贴底部。 */
  }
  
  /* 顶部积分卡片 */
  .points-summary {
    position: relative; /* 相对定位，作为内部绝对定位元素的参照。 */
    height: 300rpx;     /* 固定卡片高度。 */
    margin-bottom: 40rpx; /* 卡片底部留出空白。 */
  }
  
  .summary-bg {
    position: absolute;   /* 绝对定位，使其覆盖在 `points-summary` 容器内。 */
    width: 100%;          /* 宽度占满父容器。 */
    height: 100%;         /* 高度占满父容器。 */
    background: linear-gradient(to right, #34589e, #0942b3); /* 关键样式：从浅粉到深粉的水平渐变背景。 */
    border-bottom-left-radius: 60rpx;  /* 左下角大圆角。 */
    border-bottom-right-radius: 60rpx; /* 右下角大圆角，形成卡片悬浮效果。 */
    box-shadow: 0 6rpx 12rpx rgba(255, 107, 129, 0.3); /* 轻微的阴影效果，增加立体感。 */
  }
  
  .summary-content {
    position: absolute; /* 绝对定位，使内容浮在背景之上。 */
    top: 80rpx;         /* 距离顶部 80rpx，将内容向下推，避免紧贴屏幕顶部。 */
    left: 0;
    right: 0;           /* 左右定位为 0，使内容居中显示。 */
    text-align: center; /* 内部文本水平居中。 */
    color: #fff;        /* 所有文本颜色为白色，与背景形成对比。 */
  }
  
  .summary-content .title {
    font-size: 34rpx; /* 标题字体大小。 */
    opacity: 0.9;     /* 轻微的透明度，使颜色柔和。 */
  }

  /* ✅ 新增：积分数字与单位在同一行居中 */
  .score-row {
    display: flex;
    justify-content: center;
    align-items: baseline; /* 保证“分”与数字底部对齐 */
    margin-top: 20rpx;
  gap: 12rpx;
  }
  
  .summary-content .score {
    display: block;    /* 独占一行。 */
    font-size: 100rpx; /* 巨大的字体，突出总积分。 */
    font-weight: bold; /* 粗体。 */
    line-height: 1.2;  /* 行高，控制垂直间距。 */
    margin: 20rpx 0;   /* 上下留白。 */
  }
  
  .summary-content .unit {
    font-size: 26rpx; /* 单位字体大小。 */
    opacity: 0.8;     /* 轻微透明。 */
  }
  
.redeem-chip.inline {
  display: inline-flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 14rpx;
  background: rgba(255, 255, 255, 0.18);
  border: 1rpx solid rgba(255, 255, 255, 0.28);
  border-radius: 999rpx;
  color: #fff;
}

.chip-label {
  font-size: 24rpx;
  opacity: 0.9;
}

.chip-value {
  font-size: 32rpx;
  font-weight: 700;
}

.redeem-float {
  position: absolute;
  right: 36rpx;
  bottom: 30rpx;
  display: inline-flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 16rpx;
  background: rgba(0, 0, 0, 0.15);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 999rpx;
  color: #fff;
}

.redeem-float .chip-label {
  font-size: 24rpx;
  opacity: 0.9;
}

.redeem-float .chip-value {
  font-size: 32rpx;
  font-weight: 700;
}

.redeem-float .chip-unit {
  font-size: 24rpx;
  opacity: 0.85;
}

  /* --- */

/* 标题 */
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin: 20rpx 40rpx;
  color: #333;
  border-left: 8rpx solid #34589e;
  padding-left: 16rpx;
}

/* 统计卡片 */
.stats-card {
  background-color: #fff;
  margin: 0 20rpx 40rpx;
  border-radius: 20rpx;
  padding: 32rpx 40rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(31, 79, 163, 0.08);
}

.stats-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}

.stats-label {
  font-size: 26rpx;
  color: #7c89a3;
}

.stats-value {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f4e9d;
}

.stats-divider {
  width: 2rpx;
  height: 60rpx;
  background: #e0e5f0;
}

/* 积分明细卡片 */
.record-card {
  background-color: #fff;
  margin: 20rpx 40rpx;
  border-radius: 20rpx;
  padding: 24rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.05);
  transition: transform 0.2s;
}

.record-card:active {
  transform: scale(0.98);
}

.record-left {
  display: flex;
  flex-direction: column;
}

.record-name {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}

.record-date {
  font-size: 24rpx;
  color: #888;
  margin-top: 6rpx;
}

.record-right .record-score {
  font-size: 36rpx;
  font-weight: bold;
}

.record-score.plus {
  color: #4CAF50;
}

.record-score.minus {
  color: #f44336;
}

/* 空状态 */
.empty {
  text-align: center;
  color: #aaa;
  margin-top: 200rpx;
  font-size: 28rpx;
}

.redeem-entry {
  margin: -10rpx 20rpx 20rpx;
  padding: 28rpx 32rpx;
  background: #fff;
  border-radius: 16rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #1f4e9d;
  font-size: 30rpx;
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.05);
}

.redeem-entry:active {
  opacity: 0.9;
}

.redeem-entry .arrow {
  font-size: 34rpx;
  color: #7c89a3;
}