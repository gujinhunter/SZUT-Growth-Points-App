.profile-page {
  min-height: 100vh;
  padding: 32rpx;
  background: #f4f6fb;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.hero-card {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  background: linear-gradient(135deg, #1f4e9d, #2f6fd2);
  border-radius: 28rpx;
  color: #fff;
  box-shadow: 0 18rpx 32rpx rgba(31, 79, 163, 0.18);
}

.hero-left {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.hero-title {
  font-size: 40rpx;
  font-weight: 600;
}

.hero-sub {
  font-size: 26rpx;
  opacity: 0.85;
}

.hero-tag {
  padding: 12rpx 28rpx;
  border-radius: 999rpx;
  font-size: 26rpx;
  background: rgba(255, 255, 255, 0.15);
  border: 2rpx solid rgba(255, 255, 255, 0.35);
}

.tag-admin {
  background: rgba(255, 180, 90, 0.2);
  border-color: rgba(255, 180, 90, 0.5);
}

.tag-student {
  background: rgba(255, 255, 255, 0.2);
  border-color: rgba(255, 255, 255, 0.45);
}

.info-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 28rpx 32rpx;
  box-shadow: 0 12rpx 24rpx rgba(31, 79, 163, 0.08);
}

.card-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1f2b50;
  margin-bottom: 20rpx;
}

.info-row {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eef1f6;
  font-size: 28rpx;
  color: #3c4a68;
}

.info-row:last-child {
  border-bottom: none;
}

.info-label {
  color: #7a859f;
}

.info-value {
  text-align: right;
  max-width: 60%;
}

.edit-phone-btn {
  margin-top: 24rpx;
  align-self: flex-start;
  padding: 0 36rpx;
  min-width: 320rpx;
  height: 72rpx;
  line-height: 72rpx;
  background: linear-gradient(135deg, #1f4e9d, #2f6fd2);
  color: #fff;
  border-radius: 999rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  font-size: 28rpx;
  font-weight: 500;
  box-shadow: 0 12rpx 24rpx rgba(31, 79, 163, 0.25);
}
.edit-phone-btn::after {
  border: none;
}
.edit-phone-btn__icon {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.25);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
}
.edit-phone-btn__text {
  white-space: nowrap;
}
.edit-phone-btn:disabled {
  opacity: 0.6;
  box-shadow: none;
}

.hint-text {
  font-size: 26rpx;
  color: #4c5879;
  line-height: 1.6;
}

.refresh-btn {
  margin-top: 20rpx;
  background: #eef2fb;
  color: #1f4e9d;
}

.bind-tip {
  margin-top: 10rpx;
  padding: 28rpx;
  background: #fff8e6;
  border-radius: 20rpx;
  color: #9c6c00;
  font-size: 26rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 20rpx;
}

.bind-btn {
  background: #ffb347;
  color: #fff;
  border: none;
}

